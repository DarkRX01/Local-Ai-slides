{
  "name": "@slides-clone/electron",
  "version": "1.0.0",
  "main": "dist/main.js",
  "author": "Slides Clone Team",
  "description": "Desktop application for Slides Clone - AI-powered presentation tool",
  "license": "MIT",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc && npm run build:electron",
    "build:electron": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "start": "electron .",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "clean": "rimraf dist build"
  },
  "dependencies": {
    "@slides-clone/shared": "*",
    "electron-updater": "^6.1.7",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.slides-clone.app",
    "productName": "Slides Clone",
    "directories": {
      "output": "build",
      "buildResources": "resources"
    },
    "files": [
      "dist/**/*",
      "resources/**/*"
    ],
    "extraResources": [
      {
        "from": "../frontend/dist",
        "to": "app",
        "filter": ["**/*"]
      },
      {
        "from": "../backend/dist",
        "to": "backend",
        "filter": ["**/*"]
      },
      {
        "from": "../../data",
        "to": "data",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "resources/icon.ico",
      "publisherName": "Slides Clone"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "resources/icon.icns",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "resources/entitlements.mac.plist",
      "entitlementsInherit": "resources/entitlements.mac.plist"
    },
    "linux": {
      "target": ["AppImage", "deb", "rpm"],
      "icon": "resources/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
